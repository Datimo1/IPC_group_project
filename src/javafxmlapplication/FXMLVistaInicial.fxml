<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="javafxmlapplication.FXMLVistaInicialController">
    
    <top>
        <HBox alignment="CENTER" styleClass="header">
            <Label styleClass="title-label" text="Gestor de Gastos" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Contenido principal aquí -->
            <Label styleClass="total-expense-label" text="Gasto Total: $" />
            <Label styleClass="category-label" text="Desglose por Categorías:" />
            <VBox fx:id="categoriesContainer" spacing="5" styleClass="category-container">
                <!-- Etiquetas de categorías aquí -->
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Button fx:id="readyButton" styleClass="action-button" text="Agregar Gasto" />
            <Button styleClass="action-button" text="Ver Reporte" />
            <!-- Otros botones aquí según sea necesario -->
        </HBox>
    </bottom>

</BorderPane>
