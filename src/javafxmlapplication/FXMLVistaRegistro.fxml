                        <ImageView fx:id="profileImage" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/doc.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" GridPane.rowIndex="10">
               <children>
                  <Button mnemonicParsing="false" styleClass="action-button" text="Crear Cuenta" />
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
               <GridPane.margin>
                  <Insets left="15.0" right="15.0" />
               </GridPane.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="50.0" right="50.0" />
