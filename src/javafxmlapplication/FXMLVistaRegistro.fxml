          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="BOTTOM_LEFT">
               <children>
                  <Label styleClass="content-text" text="Nombre" />
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
               <GridPane.margin>
                  <Insets left="15.0" right="15.0" />
               </GridPane.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" GridPane.rowIndex="1">
               <children>
                  <TextField HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
               <GridPane.margin>
                  <Insets left="15.0" right="15.0" />
               </GridPane.margin>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" GridPane.rowIndex="2">
               <children>
                  <Label styleClass="content-text" text="Nickname" />
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
               <GridPane.margin>
                  <Insets left="15.0" right="15.0" />
               </GridPane.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" GridPane.rowIndex="3">
               <children>
                  <TextField HBox.hgrow="ALWAYS" />
