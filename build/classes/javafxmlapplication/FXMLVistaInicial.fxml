<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" stylesheets="@fxmlvistainicial-estilos.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.FXMLVistaInicialController">

    <center>
        <VBox alignment="CENTER" spacing="20">
         <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="80.0" prefWidth="740.0" styleClass="total-expense-container" VBox.vgrow="ALWAYS">
            <children>
                  <!-- Contenido principal aquí -->
                  <Label styleClass="total-expense-label" text="Gasto total este mes:" />
               <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="total-expense-label" text="0">
                  <padding>
                     <Insets left="10.0" />
                  </padding>
               </Label>
               <Label styleClass="total-expense-label" text="€">
                  <HBox.margin>
                     <Insets left="5.0" />
                  </HBox.margin>
               </Label>
            </children>
         </HBox>
         <StackPane>
            <children>
               <VBox fx:id="vistaInicio">
                  <children>
                     <HBox alignment="CENTER_LEFT" prefHeight="64.0" prefWidth="740.0">
                        <children>
                              <Label styleClass="category-label" text="Desglose por Categorías:" />
                        </children>
                     </HBox>
                        <VBox fx:id="categoriesContainer" prefHeight="497.0" prefWidth="740.0" spacing="5" styleClass="category-container">
                <!-- Etiquetas de categorías aquí -->
            </VBox>
                     <PieChart fx:id="tartaCategorias" title="Gasto este mes por categorías" />
                  </children>
                  <padding>
                     <Insets left="20.0" right="20.0" />
                  </padding>
               </VBox>
               <HBox fx:id="vistaGastos" alignment="CENTER_LEFT" prefHeight="64.0" prefWidth="740.0" visible="false">
                  <children>
                     <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                        <children>
                           <TableView fx:id="tablaGastos">
                              <columns>
                                 <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Título" />
                                 <TableColumn fx:id="categoryColumn" prefWidth="175.0" text="Categoría" />
                                 <TableColumn fx:id="costColumn" prefWidth="110.0" text="Coste" />
                                 <TableColumn fx:id="dateColumn" prefWidth="125.0" text="Fecha" />
                              </columns>
                           </TableView>
                        </children>
                        <HBox.margin>
                           <Insets bottom="25.0" left="20.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </VBox>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0" spacing="20.0">
                        <children>
                           <VBox alignment="CENTER" spacing="10.0">
                              <children>
                                 <Button mnemonicParsing="false" prefWidth="75.0" text="Ver Gasto" />
                                 <Button mnemonicParsing="false" prefWidth="75.0" text="Editar" />
                                 <Button mnemonicParsing="false" prefWidth="75.0" text="Eliminar" />
                              </children>
                              <padding>
                                 <Insets bottom="20.0" />
                              </padding>
                           </VBox>
                           <Label text="Filtros:" />
                           <ComboBox fx:id="categoryFIlter" prefWidth="200.0" />
                           <ComboBox fx:id="monthFilter" prefWidth="200.0" />
                           <ComboBox fx:id="yearFilter" prefWidth="200.0" />
                        </children>
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                        <padding>
                           <Insets bottom="45.0" left="20.0" right="20.0" />
                        </padding>
                     </VBox>
                  </children>
               </HBox>
               <VBox fx:id="vistaGraficas" prefHeight="200.0" prefWidth="100.0" />
            </children>
         </StackPane>
        </VBox>
    </center>
   <left>
      <VBox fx:id="menu" alignment="CENTER" minWidth="-Infinity" prefWidth="60.0" styleClass="menu" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                     <Button fx:id="addChargeButton" alignment="BASELINE_LEFT" ellipsisString=" " maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="50.0" styleClass="action-button" text="Añadir Gasto">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/custom-plus-circle.png" />
                           </image></ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefWidth="90.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="inicioButton" alignment="BASELINE_LEFT" ellipsisString=" " maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cambiarVistaInicio" prefHeight="50.0" styleClass="action-button" text="Inicio">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/custom-house.png" />
                           </image></ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="listaButton" alignment="BASELINE_LEFT" ellipsisString="" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cambiarVistaGastos" prefHeight="50.0" styleClass="action-button" text="Lista Gastos">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/list-bullet-rectangle.png" />
                           </image></ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="graficasButton" alignment="BASELINE_LEFT" ellipsisString=" " maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cambiarVistaGraficas" prefHeight="50.0" styleClass="action-button" text="Gráficas">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/chart-bar-xaxis.png" />
                           </image></ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Button fx:id="aPDFButton" alignment="BASELINE_LEFT" ellipsisString=" " maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" mnemonicParsing="false" prefHeight="50.0" styleClass="action-button" text="Reporte en PDF">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/doc.png" />
                           </image></ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="20.0" left="15.0" top="15.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <StackPane prefHeight="100.0" styleClass="header" BorderPane.alignment="CENTER">
         <children>
               <Label alignment="CENTER" styleClass="title-label" text="POLIGASTOS" />
            <HBox alignment="CENTER_RIGHT" StackPane.alignment="CENTER">
               <children>
                  <StackPane>
                     <children>
                        <HBox fx:id="visionSesionIniciada" alignment="CENTER">
                           <children>
                              <Label fx:id="nicknameLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" text="nickUsuario">
                                 <graphic>
                                    <ImageView fx:id="imagenPerfil" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../resources/perfil-3-medico.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <Button fx:id="configuracionButton" contentDisplay="RIGHT" graphicTextGap="0.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#configuracion" prefHeight="25.0" prefWidth="25.0" styleClass="action-button">
                                 <graphic>
                                    <ImageView fitHeight="82.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../resources/custom-plus-circle.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <Button fx:id="inicioSesionButton" mnemonicParsing="false" onAction="#inicioSesion" styleClass="action-button" text="Iniciar sesión/Registrarse" visible="false" />
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </children>
      </StackPane>
   </top>

</BorderPane>
