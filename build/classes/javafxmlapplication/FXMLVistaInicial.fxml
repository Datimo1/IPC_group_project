<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600">
    
    <top>
        <HBox alignment="CENTER" styleClass="header">
            <Label text="Gestor de Gastos" styleClass="title-label" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Contenido principal aquí -->
            <Label text="Gasto Total: $" styleClass="total-expense-label" />
            <Label text="Desglose por Categorías:" styleClass="category-label" />
            <VBox fx:id="categoriesContainer" styleClass="category-container" spacing="5">
                <!-- Etiquetas de categorías aquí -->
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Button text="Agregar Gasto" styleClass="action-button" />
            <Button text="Ver Reporte" styleClass="action-button" />
            <!-- Otros botones aquí según sea necesario -->
        </HBox>
    </bottom>

</BorderPane>
